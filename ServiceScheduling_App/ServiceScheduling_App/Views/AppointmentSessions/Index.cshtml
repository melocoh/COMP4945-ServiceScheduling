@model IEnumerable<ServiceScheduling_App.Models.AppointmentSession>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Appointments</h1>

<p>
    <a asp-controller="Appointments" asp-action="Booking">Book a New Appointment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AppSessionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AppSessionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AppSessionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
