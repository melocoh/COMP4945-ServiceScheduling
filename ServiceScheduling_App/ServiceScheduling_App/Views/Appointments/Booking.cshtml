@model ServiceScheduling_App.ViewModels.BookingForm

<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
          integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <title>Index</title>

    <style>

        #blockContainer {
            display: block;
            margin-left: 0%;
            margin-right: 5%;
            margin-top: 0%;
            margin-bottom: auto;
            border: 1px solid transparent;
            border-radius: 10px;
            padding: 1px;
        }

        #message {
            font-size: 20px;
            font-weight: bold;
        }

        #message2 {
            font-size: 15px;
            font-weight: 600;
        }

        #schedulebox {
            border: 5px solid grey;
            width: 100%;
            height: 600px;
            margin: 20px;
        }

        .statusbutton {
            margin: 15px;
            width: 120px;
        }

        .hyperlinks {
            margin: 15px;
            font-size: 12px;
            text-align: center;
        }

        .logininput {
            width: 300px;
        }

        .splitline {
            width: 100%;
        }

        .scrolldiv {
            overflow-y: scroll;
        }
    </style>
</head>

<body>

    <div id="mainContainer">
        @*<div id="blockContainer">*@
        <div id="dynamicContainer" class="d-flex flex-column">
            <div class="d-flex justify-content-start">
                <div>
                    <h1>Booking Appointment</h1>
                </div>
            </div>
            <hr class="splitline">

            <p>Filter necessary information to view available appointments.</p><br />
            <div class="container">
                <div class="row">
                    <!-- Fill Out Information -->
                    <div class="col">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <!-- Service Type -->
                            <div class="form-group">
                                <label class="control-label">Service:</label>
                                <select class="form-control" asp-items="ViewBag.Service">
                                    <option value="">Select a Service</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>

                            <!-- Location -->
                            <div class="form-group">
                                <label asp-for="Location" class="control-label"></label>
                                <select class="form-control" asp-items="ViewBag.Location">
                                    <option value="">Select a Location</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>

                            <!-- Day of Week -->
                            <div class="form-group">
                                <label asp-for="Day" class="control-label"></label>
                                <select class="form-control" asp-items="Html.GetEnumSelectList<DayOfWeek>()">
                                    <option value="">Select Day of the Week</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>

                            <!-- Min Date Range -->
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input asp-for="StartDate" class="form-control" />
                                <span class="text-danger"></span>
                            </div>

                            <!-- Max Date Range -->
                            <div class="form-group">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input asp-for="EndDate" class="form-control" />
                                <span class="text-danger"></span>
                            </div>


                        </form>
                        <div class="form-group">
                            @*Button trigger modal*@
                            <button id="check-availability" type="button" class="btn btn-primary">
                                Check Availability
                            </button>

                            @*Modal*@
                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">Service Session Confirmation</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div>
                                                <p>Wed, 2020-11-16 at 10:00 - 12:00</p>
                                                <p>Burnaby</p>
                                                <p>Rate ($/session): 80.00</p>
                                                <p>Employee: Jason Chi Fai Lee</p>
                                            </div>
                                            <!-- Checkbox -->
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                <label class="form-check-label" for="flexCheckDefault">
                                                    weekly service
                                                </label>
                                            </div>
                                            <!-- Hidden Div -->
                                            <div id="hiddenDiv" style="display: none;">
                                                <!-- Weekly subscri -->
                                                <div class="form-group">
                                                    <label class="control-label">Please choose the <u>number of weeks</u> you'd like to subscribe to this service:</label>
                                                    <select class="form-control" asp-items="ViewBag.NumOfWeeks">
                                                        <option value="">Select the number of weekly sessions</option>
                                                    </select>
                                                    <span class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                            <a href="@Url.Action("BookingAppointment","Home")">
                                                <button type="button" class="btn btn-success">Confirm</button>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Available Weekly Sessions -->
                    <div class="col">
                        <div id="schedulebox" class="d-flex flex-column bd-highlight mb-3">
                            <h4 style="text-align: center;" class="mt-1">Available Weekly Sessions</h4>

                            <div class="container scrolldiv" id="scheduleContainer">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*</div>*@
    </div>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
            integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous">
    </script>
    <script>

        $("#check-availability").click(function () {
            document.getElementById("scheduleContainer").innerHTML = '';
            @* <div class="row border">
                <div class="col-9">
                    <p>Wed, 2020-11-16 at 10:00 - 12:00</p>
                    <p>Burnaby</p>
                </div>
                <div class="col-3" style="padding: 30px;">
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModalCenter">Book</button>
                </div>
            </div> *@
            getFilteredAvailability();
        });


        function createCard(data) {
            let daysOfWeek = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

            // Row 3
            let createDiv7 = document.createElement("div");
            createDiv7.setAttribute('class', "row border m-1");
            document.getElementById("scheduleContainer").appendChild(createDiv7);

            let createDiv8 = document.createElement("div");
            createDiv8.setAttribute('class', "col-9");
            createDiv7.appendChild(createDiv8);

            let createP3 = document.createElement("div");
            createP3.appendChild(document.createTextNode(`${daysOfWeek[data.day]}, ${data.date} at ${data.time}`));
            createDiv8.appendChild(createP3);

            createP3 = document.createElement("div");
            createP3.appendChild(document.createTextNode(`Location: ${data.location}`));
            createDiv8.appendChild(createP3);

            let shiftDetailsText = document.createElement("div");

            let names = "";

            for(let i = 0; i < data.employeeNames.length; i++)
            {
                names += data.employeeNames[i] + ((i == i - 1) ? ', ' : ' ');
            }

            shiftDetailsText.appendChild(document.createTextNode(`Employees: ${names}`));
            createDiv8.appendChild(shiftDetailsText);

            let createDiv9 = document.createElement("div");
            createDiv9.setAttribute('class', "col-3");
            createDiv9.setAttribute('style', "padding: 30px;");
            createDiv7.appendChild(createDiv9);

            let createButton3 = document.createElement("button");
            createButton3.setAttribute('type', "button");
            createButton3.setAttribute('class', "btn btn-info");
            createButton3.setAttribute('data-toggle', "modal");
            createButton3.setAttribute('data-target', "#exampleModalCenter");
            createButton3.appendChild(document.createTextNode("Book"));
            createDiv9.appendChild(createButton3);
        }

        // reveals the div when the checkbox is checked
        // hides the div when the checkbox is unchecked
        $("#flexCheckDefault").click(function () {
            if (this.checked) {
                $('#hiddenDiv').css('display', 'inline-block');
            } else {
                $('#hiddenDiv').css('display', 'none');
            }
        });

        function getFilteredAvailability()
        {

            // ===============================
            // DO SHIT HERE
            //      pull from DB
            // ===============================


            // ===============================
            // example data
            let data = [
                {
                    employeeNames:["Bebe ko"],
                    appSessionId : 1,
                    day:2,
                    date: "2020-11-16",
                    time: "10:00-12:00",
                    location : "Burnaby"
                },
                {
                    employeeNames:["Kuya"],
                    appSessionId : 1,
                    day:2,
                    date: "2020-09-16",
                    time: "08:00-10:00",
                    location : "Burnaby"
                },
                {
                    employeeNames:["Jason"],
                    appSessionId : 2,
                    day:3,
                    date: "2020-12-16",
                    time: "11:00-15:00",
                    location : "Burnaby"
                },
            ];
            // ===============================

            // generate availaibity list

            for(let i = 0; i < data.length; i++)
            {
                createCard(data[i]);
            }
        }

        function addAvailability(data) {

            let createDiv = document.createElement("div");
            createDiv.setAttribute('class', "row border m-3");
            document.getElementById("schedulebox").appendChild(createDiv);

            let createDiv2 = document.createElement("div");
            createDiv2.setAttribute('class', "col-9");
            createDiv.appendChild(createDiv2);

            let shiftDetailsText = document.createElement("p");
            shiftDetailsText.appendChild(document.createTextNode(`Num of Employee: ${data.numberOfEmployees}/${data.numberOfMaxEmployees}`));
            createDiv2.appendChild(shiftDetailsText);

            shiftDetailsText = document.createElement("p");

            let names = "";

            for(let i = 0; i < data.employeeNames.length; i++)
            {
                names += data.employeeNames[i] + ((i == i - 1) ? ', ' : ' ');
            }

            shiftDetailsText.appendChild(document.createTextNode(`Employee: ${names}`));
            createDiv2.appendChild(shiftDetailsText);

            let createDiv3 = document.createElement("div");
            createDiv3.setAttribute('class', "col-3");
            createDiv3.setAttribute('style', "padding: 30px;");
            createDiv.appendChild(createDiv3);

            let joinButton = document.createElement("button");
            joinButton.setAttribute('type', "button");
            joinButton.setAttribute('class', "btn btn-info");
            joinButton.setAttribute('data-toggle', "modal");
            joinButton.setAttribute('data-target', "#exampleModalCenter");
            joinButton.appendChild(document.createTextNode("Join"));
            createDiv3.appendChild(joinButton);


            joinButton.setAttribute('id', "joinID" + data.serviceShiftId);
            joinButton.setAttribute('onClick', "clickConfirm(this.id)");



        }


    </script>
</body>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
