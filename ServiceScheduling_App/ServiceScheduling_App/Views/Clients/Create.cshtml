@model ServiceScheduling_App.Models.Client
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
          integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <title>Index</title>

    <style>

        #blockContainer {
            display: block;
            margin-left: 5%;
            margin-right: 5%;
            margin-top: 5%;
            margin-bottom: auto;
            border: 1px solid transparent;
            border-radius: 10px;
            padding: 20px;
        }

        #message {
            font-size: 30px;
            font-weight: bold;
            text-align: center;
        }

        .statusbutton {
            margin: 15px;
            width: 120px;
        }

        .hyperlinks {
            margin: 15px;
            font-size: 12px;
            text-align: center;
        }

        .logininput {
            width: 300px;
        }
    </style>
</head>
<body>

    <div id="mainContainer">
        <div id="blockContainer">
            <div id="dynamicContainer" class="d-flex flex-column">
                <div class="d-flex justify-content-center">
                    <p id="message">Client Registration</p>
                </div>
                <form asp-action="Create">
                    <div class="d-flex justify-content-center">
                        <div class="d-flex flex-column bd-highlight mb-3">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="p-2 bd-highlight form-group">
                                <label asp-for="FullName" class="control-label"></label>
                                <input asp-for="FullName" class="logininput form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="p-2 bd-highlight form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="logininput form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="p-2 bd-highlight form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="logininput form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="@Url.Action("ClientSignIn", "Home")" class="hyperlinks">Already a user?</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="form-group">
                            <a class="btn btn-info statusbutton" href="@Url.Action("RoleSelection","Home")">Go Back</a>
                            <button type="submit" value="SubmitRegistrationClient" class="btn btn-primary statusbutton">Sign Up</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            console.log("onload for logout button update working");
            let logout = document.getElementById("logoutbutton");
            logout.style.display = "none";
        });
    </script>

</body>
</html>


