@model Client
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
          integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <title>Index</title>

    <style>

        #blockContainer {
            display: block;
            margin-left: 5%;
            margin-right: 5%;
            margin-top: 5%;
            margin-bottom: auto;
            border: 1px solid transparent;
            border-radius: 10px;
            padding: 20px;
        }

        #message {
            font-size: 30px;
            font-weight: bold;
            text-align: center;
        }

        .statusbutton {
            margin: 15px;
            width: 120px;
        }

        .hyperlinks {
            margin: 15px;
            font-size: 12px;
            text-align: center;
        }

        .logininput {
            width: 300px;
        }
    </style>
</head>
<body>

    <div id="mainContainer">
        <div id="blockContainer">
            <div id="dynamicContainer" class="d-flex flex-column">
                <div class="d-flex justify-content-center">
                    <p id="message">Client Registration</p>
                </div>
                <form asp-action="SubmitRegistrationClient" asp-controller="Home">
                    <div class="d-flex justify-content-center">
                        <div class="d-flex flex-column bd-highlight mb-3">

                            <div class="p-2 bd-highlight">
                                <label class="control-label" asp-for="FullName">Full Name</label><br>
                                <input asp-for="FullName" class="logininput form-control" type="text" id="loginfullname">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="p-2 bd-highlight">
                                <label class="control-label" asp-for="Email">Email</label><br>
                                <input asp-for="Email" class="logininput form-control" type="text" id="loginemail">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="p-2 bd-highlight">
                                <label class="control-label">Password</label><br>
                                <input asp-for="Password" class="logininput form-control" type="password" id="loginpassword">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            @*<div class="p-2 bd-highlight">
                                <label class="control-label">Confirm Password</label><br>
                                <input asp-for="Password" class="logininput form-control" type="password" id="confirmloginpassword">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>*@

                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="@Url.Action("RoleSelection","Home")">
                            <button class="btn btn-info statusbutton">Go Back</button>
                        </a>
                        <button type="submit" value="SubmitRegistrationClient" class="btn btn-primary statusbutton">Sign Up</button>
                    </div>
                </form>
                <div class="d-flex justify-content-center">
                    <a href="@Url.Action("ClientSignIn", "Home")" class="hyperlinks">Already a user?</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
