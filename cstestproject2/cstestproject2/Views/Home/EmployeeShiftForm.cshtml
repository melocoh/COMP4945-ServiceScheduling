<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
          integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <title>Index</title>

    <style>

        #blockContainer {
            display: block;
            margin-left: 0%;
            margin-right: 5%;
            margin-top: 0%;
            margin-bottom: auto;
            border: 1px solid transparent;
            border-radius: 10px;
            padding: 1px;
        }

        #onecontainer {
            display: block;
            margin-left: 0%;
            margin-right: 5%;
            margin-top: 0%;
            margin-bottom: auto;
            border: 1px solid transparent;
            border-radius: 10px;
            padding: 1px;
        }

        #message {
            font-size: 20px;
            font-weight: bold;
        }



        #schedulebox {
            border: 5px solid transparent;
            width: 100%;
            height: 600px;
            margin: 20px;
        }

        #rightsidetitle{
            text-align:center;
        }

        .statusbutton {
            margin: 15px;
            width: 150px;
        }

        .divbox{
            text-align: end;
        }



        .logininput {
            width: 300px;
        }

        .splitline {
            border: 2px solid lightgrey;
            border-radius: 5px;
            width: 100%;
        }

        /* flex box code css below */
        .wrapper {
            border: 2px solid lightgrey;
            border-radius: 10px;
            overflow: hidden;
        }

          .wrapper div {
             min-height: 0px;
             padding: 25px;
          }

          #one {
            background-color: solid grey;
            float:left;
            margin-right:20px;
            width:50%;
            border-right:2px solid black;
          }
          #two {
            background-color: white;
            overflow:hidden;
            margin:10px;
            border:2px solid transparent;
            min-height:170px;
          }

          /* 793px */
          @@media screen and (max-width: 750px) {
             #one {
              float: none;
              margin-right:0;
              width:auto;
              border:0;
              border-bottom:2px solid black;
            }
          }


    </style>
</head>
<body>

    <div id="mainContainer">
        <div id="blockContainer">
            <div id="dynamicContainer" class="d-flex flex-column">
                <div class="d-flex justify-content-start">
                    <div>
                        <p id="message" class="">Create or Join a Service Session</p>
                    </div>
                </div>
                <hr class="splitline">
                <div class="d-flex justify-content-center">
                    <div id="schedulebox" class="d-flex flex-column bd-highlight mb-3">

                        <div class="wrapper">
                            <!-- BEGIN TOP HALF -->
                            <div id="one">
                                <p class="p-2">Fill out the information for this shift:</p>
                                <div id="onecontainer" class="d-flex justify-content-end">
                                    <div class="d-flex flex-column ">
                                        <div class="p-2 divbox">
                                            <label>Service:</label>
                                            <input value="hello">
                                        </div>
                                        <div class="p-2 divbox">
                                            <label>Location:</label>
                                            <input value="hello">
                                        </div>
                                        <div class="p-2 divbox">
                                            <label>Day of the Week:</label>
                                            <input value="hello">
                                        </div>
                                        <div class="p-2 divbox">
                                            <label>Time:</label>
                                            <input value="hello">
                                        </div>
                                        <div id="buttoncontainer" class="d-flex justify-content-center p-2">
                                            <button type="button" class="btn btn-info statusbutton">Create Session</button>
                                            <button type="button" class="btn btn-primary statusbutton">Check Session</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END TOP HALF -->
                            <!-- BEGIN BOTTOM HALF -->
                            <div id="two">
                                <p id="rightsidetitle">Available Weekly Sessions</p>
                                <div id="dynamictwo" class="dynamicadmincontainer">
                                    <div id="dynamicitemlist">
                                        hello
                                    </div>
                                </div>
                            </div>
                            <!-- END BOTTOM HALF -->
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-start">
                    <a href="@Url.Action("RoleSelection","Home")"></a>
                    <!-- Button trigger modal -->
                    <button  class="btn btn-warning statusbutton">
                        Edit
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
            integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
            integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF" crossorigin="anonymous">
    </script>
</body>
</html>

